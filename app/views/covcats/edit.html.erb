<!-- Validation failure messages -->
<% if @covcat.errors.any? %>
  <% @covcat.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Covcat #<%= @covcat.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_covcat/<%= @covcat.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for defaultpercent -->
      <div class="form-group">
        <label for="defaultpercent" class="control-label">
          Defaultpercent
        </label>

        <input type="text" id="defaultpercent" name="defaultpercent" placeholder="Defaultpercent" class="form-control" value="<%= @covcat.defaultpercent %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @covcat.description %>">
      </div>

      <button class="btn btn-warning">
        Update Covcat
      </button>
      or
      <a href="/covcats/<%= @covcat.id %>">Cancel</a>
    </form>
  </div>
</div>
